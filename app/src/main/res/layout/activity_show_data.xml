<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e6cfd1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_back2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:drawableLeft="@mipmap/back"
            android:padding="5dp"
            android:text="详细资料"
            android:textColor="#1296db"
            android:textSize="18sp" />

        <TextView
            style="@style/TextStyle"
            android:text="姓名" />

        <TextView
            android:id="@+id/tv_show_name"
            style="@style/TextStyle"
            android:background="#fff" />

        <TextView
            style="@style/TextStyle"
            android:text="性别" />

        <TextView
            android:id="@+id/tv_gender"
            style="@style/TextStyle"
            android:background="#fff" />

        <TextView
            style="@style/TextStyle"
            android:text="照片" />

        <TextView
            android:id="@+id/tv_photo"
            style="@style/TextStyle"
            android:background="#fff" />

        <TextView
            style="@style/TextStyle"
            android:text="生日" />

        <TextView
            android:id="@+id/tv_birthday"
            style="@style/TextStyle"
            android:background="#fff" />

        <TextView
            style="@style/TextStyle"
            android:text="收入" />

        <TextView
            android:id="@+id/tv_income"
            style="@style/TextStyle"
            android:background="#fff" />
        <TextView
            style="@style/TextStyle"
            android:text="支付方式" />

        <TextView
            android:id="@+id/tv_payways"
            style="@style/TextStyle"
            android:background="#fff" />

        <TextView
            style="@style/TextStyle"
            android:text="文化程度" />

        <TextView
            android:id="@+id/tv_diploma"
            style="@style/TextStyle"
            android:background="#fff" />

        <TextView
            style="@style/TextStyle"
            android:text="婚姻状况" />

        <TextView
            android:id="@+id/tv_marriage"
            style="@style/TextStyle"
            android:background="#fff" />
        <TextView
            style="@style/TextStyle"
            android:text="居住方式" />

        <TextView
            android:id="@+id/tv_living"
            style="@style/TextStyle"
            android:background="#fff" />

        <TextView
            style="@style/TextStyle"
            android:text="宗教信仰" />

        <TextView
            android:id="@+id/tv_religion"
            style="@style/TextStyle"
            android:background="#fff" />

        <TextView
            style="@style/TextStyle"
            android:text="痴呆程度" />

        <TextView
            android:id="@+id/tv_oafish"
            style="@style/TextStyle"
            android:background="#fff" />

        <TextView
            style="@style/TextStyle"
            android:text="精神病表现" />

        <TextView
            android:id="@+id/tv_insanity"
            style="@style/TextStyle"
            android:background="#fff" />

        <TextView
            style="@style/TextStyle"
            android:text="患病" />

        <TextView
            android:id="@+id/tv_illness"
            style="@style/TextStyle"
            android:text="无"
            android:background="#fff" />

        <TextView
            style="@style/TextStyle"
            android:text="意外事件" />

        <TextView
            android:id="@+id/tv_accident"
            style="@style/TextStyle"
            android:text="无"
            android:background="#fff" />

    </LinearLayout>

</ScrollView>